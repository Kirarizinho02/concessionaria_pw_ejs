        <!-- Divisão principal da página -->

        <div class="container-lg position-relative" style="margin-top: 2%;">
            <div class="row w-100 justify-content-center d-flex pt-2" style="text-align: center;">
                
                <div class="col-4">
                    <div class="ubuntu-bold d-flex align-items-center justify-content-center fs-5" onclick="novoCadastro" style="cursor: pointer; height: 140%; background-color: #7AF0CC;border-radius: 5px; border: 1px solid black; box-shadow: rgba(50, 50, 93, 0.25) 0px 2px 5px -1px, rgba(0, 0, 0, 0.3) 0px 1px 3px -1px;">
                        <i class="fa-solid fa-file p-2"></i>
                        Novo Cadastro
                    </div>
                </div>
                <div class="col-4">
                    <div class="ubuntu-bold d-flex align-items-center justify-content-center fs-5" style="cursor: pointer; height: 140%; background-color: #7AA1F0;border-radius: 5px; border: 1px solid black; box-shadow: rgba(50, 50, 93, 0.25) 0px 2px 5px -1px, rgba(0, 0, 0, 0.3) 0px 1px 3px -1px;">
                        <i class="fa-solid fa-x p-2"></i>
                        Excluir
                    </div>
                </div>
                    <div class="col-4">
                    <div class="ubuntu-bold d-flex align-items-center justify-content-center fs-5" style="cursor: pointer; height: 140%; background-color: #C9EEF0;border-radius: 5px; border: 1px solid black; box-shadow: rgba(50, 50, 93, 0.25) 0px 2px 5px -1px, rgba(0, 0, 0, 0.3) 0px 1px 3px -1px;">
                        <i class="fa-solid fa-pen p-2"></i>
                        Editar
                    </div>
                </div>
            </div>


            <!-- User Cosmético -->
            <form action="<%= isEdit ? ('/usuarios/update/' + usuarioAtual.usuarioSenha) : '/usuarios/add' %>" method="post" class="col-12">
            <div class="w-100 d-flex mt-5 fs-4 p-4" style="margin-left: -0.7%; height: 70%; background-color: #F7FBFF; border-radius: 10px; border: 1px solid black; box-shadow: rgba(50, 50, 93, 0.25) 0px 2px 5px -1px, rgba(0, 0, 0, 0.3) 0px 1px 3px -1px;">
                <div class="col-2 d-md-flex d-none align-items-center justify-content-center mt-2 mb-2 flex-column" style="border-right: 1px solid black; text-align: center;">
                    <div class="">
                        <i class="fa-solid fa-user fa-2xl" style="font-size: 8rem;"></i> 
                        <p class="mt-4 py-5 ubuntu-bold fs-4" style="border-bottom: 1px solid black;">Novo Usuário</p>
                    </div>
                    
                    <button class="btn btn-salvar mt-3" type="submit"> Salvar </button>
                </div>

            <!-- Lugar para inserção das infos -->

            <div class="row p-4">
                <div class="col-5 flex-column p-3 ubuntu-regular">
                    <label for="placa">Login:</label>
                    <input type="text" name="usuarioLogin" required="" class="input" style="font-weight: 100;" value="<%= isEdit ? usuarioAtual.usuarioLogin : '' %>">

                    <label for="modelo" style="margin-top: 15px;">Senha:</label>
                    <input type="password" name="usuarioSenha" required="" class="input" placeholder="" style="font-weight: 100;" value="<%= isEdit ? usuarioAtual.usuarioSenha : '' %>" <%= isEdit ? 'readonly' : '' %>>

                    <label for="cor">Matrícula de funcionário: </label>
                    <input type="text" name="usuarioFuncMat" required="" class="input" style="font-weight: 100;" value="<%= isEdit ? usuarioAtual.usuarioFuncMat : '' %>">
                </div>

                <div class="col-5 flex-column p-3 ubuntu-regular">
                    <label for="marca">Setor:</label>
                    <input type="text" name="usuarioSetor" required="" class="input" style="font-weight: 100;" value="<%= isEdit ? usuarioAtual.usuarioSetor : '' %>">

                    <div class="form-check mt-2">
                        <p class="ms-n1" style="margin-left: -36px;">Status:</p>
                        <input class="form-check-input" type="radio" name="usuarioStatus" name="flexRadioDefault" id="flexRadioDefault1" value="1" <%= isEdit && usuarioAtual.usuarioStatus == 1 ? 'checked' : '' %>>

                        <label class="form-check-label" for="flexRadioDefault1">Inativo</label>
                    </div>

                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="usuarioStatus" name="flexRadioDefault" id="flexRadioDefault2" value="0" <%= isEdit && usuarioAtual.usuarioStatus == 0 ? 'checked' : '' %>>

                        <label class="form-check-label" for="flexRadioDefault2">Ativo</label>
                    </div>

                    <div class="d-flex d-md-none">
                        <button type="submit" class="btn btn-salvar mt-3" <%= isEdit ? 'Atualizar' : 'Salvar' %> > Salvar </button>
                    </div>
                </div>
            </div>
        </form>
        </div>
            
            <!--Aqui ficam as funções de próximo, anterior, primeiro e último-->
            <div class="row d-flex align-items-center justify-content-center w-100 flex-row mt-5 fs-1" style="text-align: center; max-height: 20%;">
