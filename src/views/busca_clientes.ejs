            </div>


            <!-- Carro Cosmético -->
            <div class="row w-100 d-flex mt-5 fs-4" style="height: 70%; background-color: #F7FBFF; border-radius: 10px; border: 1px solid black; box-shadow: rgba(50, 50, 93, 0.25) 0px 2px 5px -1px, rgba(0, 0, 0, 0.3) 0px 1px 3px -1px;">
                <div class="col-2 d-md-flex d-none align-items-center justify-content-center mt-2 mb-2 flex-column" style="border-right: 1px solid black; text-align: center;">
                    <div class="">
                        <i class="fa-solid fa-user fa-2xl" style="font-size: 8rem;"></i> 
                        <p class="mt-4 py-5 ubuntu-bold fs-4" style="border-bottom: 1px solid black;">Cliente</p>
                    </div>
                    <div>
                        <span class="fs-6 dm-sans-medium" style="font-weight: 500 !important;">Cliente desde 2023</span>

                    </div>
                </div>
            <!-- Lugar para inserção das infos -->
            <div id="clientes" class="col-10 flex-column p-3 ubuntu-regular">
                <script>

                    function navegarClientes(type) {
                        if (window.index === undefined) window.index = 0;
                        
                        let i = window.index;

                        document.getElementById(`cliente${i}`).classList.add("d-none");

                        clientes = document.querySelectorAll("#clientes>div");

                        switch (type) {
                            case "first":
                                i = 0;
                                break;

                            case "decrement":
                                if (i == 0) break;
                                i--;
                                break;

                            case "increment":
                                if (i == clientes.length - 1) break;
                                i++;
                                break;

                            case "last":
                                i = clientes.length - 1;
                                break;
                        }

                        document.getElementById(`cliente${i}`).classList.remove("d-none");

                        document.getElementById("navigator").innerHTML = i + 1;

                        window.index = i;
                    }
                </script>
                <% data.forEach((cliente, index) => { %>
                    <div id="cliente<%= index %>" class="d-none">
                        <p class="p-1" style="font-weight: 200;"><span style="font-weight: 700;">Nome Completo:</span> <%= cliente.clienteNome %></p>
                        <p class="p-1" style="font-weight: 200;"><span style="font-weight: 700;">CPF:</span> <%= cliente.clienteCPF %></p>
                        <p class="p-1" style="font-weight: 200;"><span style="font-weight: 700;">Data de Nascimento:</span> <%= cliente.clienteDataNasc %></p>
                        <p class="p-1" style="font-weight: 200;"><span style="font-weight: 700;">Endereço:</span> <%= cliente.clienteEnde %></p>
                        <p class="p-1" style="font-weight: 200;"><span style="font-weight: 700;">Telefone:</span> <%= cliente.clienteTel %></p>
                        <p class="p-1" style="font-weight: 200;"><span style="font-weight: 700;">Cidade:</span> <%= cliente.clienteCidade %></p>
                        <p class="p-1" style="font-weight: 200;"><span style="font-weight: 700;">CNH:</span> <%= cliente.clienteCNH %></p>
                        <p class="p-1" style="font-weight: 200;"><span style="font-weight: 700;">Categoria:</span> <%= cliente.clienteCNHCat %></p>
                        <div class="w-50">
                            <a href="/clientes/edit/<%= cliente.clienteCPF %>" style="text-decoration: none;">
                                <button class="btn btn-editar fs-6 " style="width: 40%;"> Editar </button>
                            </a>
                            <span style="font-size: 0.85rem;">
                                    ou
                            </span>
                            <a href="/clientes/delete/<%= cliente.clienteCPF %>">
                                <button class="btn btn-excluir fs-6" style="width: 40%;"> Excluir </button>
                            </a>
                    </div>

                    </div>
                <% }); %>
            </div>
                
                <div class="d-flex d-md-none mb-3">
                    <button class="btn btn-editar fs-6" style="width: 40%;"> Salvar </button>
                    <span style="font-size: 0.85rem;" class="p-2">
                        ou
                    </span>
                    <button class="btn btn-excluir fs-6" style="width: 40%;"> Excluir </button>
                </div>
                </div>
            </div>
            
            <!--Aqui ficam as funções de próximo, anterior, primeiro e último-->
            <div class="row d-flex align-items-center justify-content-center w-100 flex-row mt-5 fs-1" style="text-align: center; max-height: 20%;">

                <div>
                <i class="fa-solid fa-backward-fast" style="cursor: pointer;" onclick="navegarClientes('first')"></i>
                <i class="fa-solid fa-backward-step" style="cursor: pointer;" onclick="navegarClientes('decrement')"></i>
                <span class="ubuntu-regular" id="navigator">  </span>
                <i class="fa-solid fa-forward-step" style="cursor: pointer;" onclick="navegarClientes('increment')"></i>
                <i class="fa-solid fa-forward-fast" style="cursor: pointer;" onclick="navegarClientes('last')"></i>
            </div>
